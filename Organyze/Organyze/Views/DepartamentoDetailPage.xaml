<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Organyze.Views.DepartamentoDetailPage"
             xmlns:control="clr-namespace:Organyze.Controls;assembly=Organyze"
             Title="{Binding Title}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="5,0,5,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Label TextColor="{StaticResource DarkStateBlue}" Text="Nome:"       FontSize="Small" Margin="5"/>
                <Entry Text="{Binding Departamento.Nome}" />
                <Label TextColor="{StaticResource DarkStateBlue}" Text="Status:"           FontSize="Small" Margin="5"/>
                <TableView Intent="Data">
                    <TableRoot>
                        <TableSection>
                            <SwitchCell Text="Ativo" On="{Binding Departamento.Ativo}"/>
                        </TableSection>
                    </TableRoot>
                </TableView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>