<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Organyze.Views.NewDepartamentoPage"
             Title="Novo Departamento">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Command="{Binding SalvarCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="5,0,5,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Label TextColor="{StaticResource DarkStateBlue}" Text="Nome:"       FontSize="Small" Margin="5"/>
                <Entry Text="{Binding Departamento.Nome}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
