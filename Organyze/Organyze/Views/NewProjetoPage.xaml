<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Organyze.Views.NewProjetoPage"
             Title="Novo Projeto">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="5,0,5,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Label Text="Nome do Projeto" FontSize="Medium" />
                <Entry Text="{Binding Projeto.Nome}" FontSize="Small" />
                <Label Text="Descrição" FontSize="Medium" />
                <Editor Text="{Binding Projeto.Descricao}" FontSize="Small" Margin="0" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>