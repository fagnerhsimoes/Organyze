<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Organyze.Views.RegisterPage"
             Title="Cadastro">
    <ContentPage.Content>
        <StackLayout Padding="10,10,10,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Label Text=" Email" FontSize="Medium"></Label>
            <Entry Text="{Binding Email}" VerticalOptions="Center" Keyboard="Email"></Entry>
            <Label Text=" Senha" FontSize="Medium"></Label>
            <Entry Text="{Binding Senha}" VerticalOptions="Center" IsPassword="True"></Entry>
            <Label Text=" Confirmar senha" FontSize="Medium"></Label>
            <Entry Text="{Binding Senha}" VerticalOptions="Center" IsPassword="True"></Entry>
            <Button Text=" Salvar" BackgroundColor="{StaticResource DarkStateBlue}" TextColor="White"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>